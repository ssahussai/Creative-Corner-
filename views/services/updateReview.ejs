<%- include('../partials/header') %>

<section class="page-section">
    <div class="container">
        <div class="product-item">
        <div class="product-item-title d-flex">
            <div class="bg-faded p-5 d-flex mr-auto rounded">
            <h2 class="section-heading mb-0">
                <span class="section-heading-upper">Need to</span>
                <span class="section-heading-lower">Update a review?</span>
            </h2>
            </div>
        </div>
        <div class="product-item-description d-flex ml-auto">
            <div class="bg-faded p-5 rounded">
                <p class="mb-0">Change your response below:</p><br>
                <form action="/services/<%= service._id %>/reviews/<%= review._id %>/update?_method=PUT" method="POST">
                    <label>Name:</label>
                    <input name="name" value="<%= review.name %>"><br><br>
                    <label>Review:</label>
                    <textarea name="content"><%=review.content%></textarea><br><br>
                    <label>Rating:</label>
                    <select name="rating">
                        <% for(let i = 1; i <= 5; i++) { %>
                            <option value="<%- i %>" <%- i === review.rating ? 'selected' : ''%>><%= i %></option>
                        <% } %>      
                    </select><br><br>
                    <input type="submit" value="Update Review">
                </form><br><br>
            </div>
        </div>
        </div>
    </div>
</section>

<%- include('../partials/footer') %>